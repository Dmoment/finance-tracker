<h1>My Portfolio</h1>
<div class="search-area">
     <h3> Search Stocks </h3>
     <%= form_tag search_stocks_path,method: :get do %>
           <div class="form-row align-items-center">
                <div class="col-sm-9 no-right-padding">
                    <%= text_field_tag :stock, params[:stock],placeholder: "Stock ticker name", autofocus: true, class: "form-control form-control-lg" %>
                </div>
                <div class="col-auto no-left-padding">
                
                   <%= button_tag type: :submit, class: "btn btn-success " do %>
                     <%= fa_icon 'search 2x' %>
                    <% end %>
                    
                </div>
           </div>
     <% end %>
</div>
     <% if @stock %>
          <div class="card card-header result-block col-sm-10 top-buffer" style="width: 65rem;">
          <strong>Symbol: </strong><%=@stock.ticker %>
          <strong>Name: </strong><%=@stock.name %>
          <strong>Price: </strong><%=@stock.last_price %>
          </div>
     <% end %>     

