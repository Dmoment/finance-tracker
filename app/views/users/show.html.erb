<div class="result-block">
<%=render 'layouts/messages' %>
</div>

<div class="track-table">
<div class="row">
<div class="col-9">
<table class="table table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Action</th>
  </tr>
</thead>
<tbody>
  <tr>
    <th scope="row"><%= @user.full_name%></th>
    <td><%= @user.email%></td>
    <% if current_user.not_friends_with?(@user.id) %>
     <td><%= link_to 'Follow', friendships_path(friend: @user),method: :post,class: 'btn btn-sm btn-success'%>
      </td>
    <%else%>
    <td>
     
      <span class="badge badge-secondary">
        You are friends
      </span>
      
      </td>
    <% end %>
  </tr>
</tbody>
</table>
</div>
</div>
</div>
<% if !@tracked_stock.empty? %>
   <%= render 'stocks/list'%>
<% else %>
    <h3 align="center"><%=@user.full_name%> not tracking any stock</h3>
<%end%>    