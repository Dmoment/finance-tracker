<div class="result-block">
<%=render 'layouts/messages' %>
</div>

<div class="track-table">
<div class="row">
<div class="col-9">
<table class="table table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Action</th>
  </tr>
</thead>
<tbody>
<% @friends.each do |friend|%>
  <tr>
    <th scope="row"><%= friend.full_name%></th>
    <td><%= friend.email%></td>
    <% if current_user.not_friends_with?(friend.id) %>
     <td><%= link_to 'Follow', friendships_path(friend: friend),method: :post,class: 'btn btn-sm btn-success'%>
      <%= link_to 'View Profile', user_path(friend),class: 'btn btn-sm btn-primary'%>  </td>
    <%else%>
    <td>
     
      <span class="badge badge-secondary">
        You are friends
      </span>
      <%= link_to 'View Profile', user_path(friend),class: 'btn btn-sm btn-primary'%>
      </td>
    <% end %>
  </tr>
<% end%>
</tbody>
</table>
</div>
</div>
</div>